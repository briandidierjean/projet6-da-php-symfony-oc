{% extends 'base.html.twig' %}

{% block title %}Mot de passe | SnowTricks{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="container-fluid my-5 content">
        <div class="row">
            <div class="col-12 col-md-4 offset-md-4">
                <h2 class="h2 text-center">Mot de passe</h2>
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group d-flex flex-column my-2">
                            {{ form_row(form.oldPassword) }}
                        </div>
                        <div class="form-group d-flex flex-column my-2">
                            {{ form_row(form.plainPassword.first) }}
                        </div>
                        <div class="form-group d-flex flex-column my-2">
                            {{ form_row(form.plainPassword.second) }}
                        </div>

                        <div class="d-flex flex-column my-4">
                            <button class="btn btn-primary" type="submit">Changer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}